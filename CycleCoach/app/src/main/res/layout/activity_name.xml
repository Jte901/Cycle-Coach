<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/clipboard"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.james.cyclecoach.NameActivity"
    android:id="@+id/nameLayout">

    <TextView
        android:id="@+id/nameDialogView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginStart="5dp"
        android:gravity="center"
        android:text="Hi, what's your name?"
        android:textSize="38sp" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/nameEditText"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/nameDialogView"
        android:layout_marginBottom="70dp"
        android:layout_marginLeft="20dp"
        android:textSize="38sp"/>

    <Button
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:background="#cfe2f3"
        android:text="OK"
        android:id="@+id/okButton"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/nameEditText" />

</RelativeLayout>
