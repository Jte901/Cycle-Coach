<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cfe2f3"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.james.cyclecoach.GearActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/gear2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_marginLeft="25dp"
                android:gravity="center_vertical"
                android:textAlignment="center"
                android:textSize="30sp"
                android:id="@+id/head"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:text="I'd like to ride: "
            android:textAlignment="center"
            android:textSize="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:orientation="horizontal">

            <Button
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="10dp"
                android:backgroundTint="#cfe2f3"
                android:text="-"
                android:textSize="36dp"
                android:gravity="center_vertical"
                android:textAlignment="gravity"
                android:id="@+id/decMiles"/>

            <TextView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="#ffffff"
                android:textSize="30sp"
                android:gravity="center_vertical"
                android:textAlignment="gravity"
                android:id="@+id/milesText"/>

            <Button
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:backgroundTint="#cfe2f3"
                android:text="+"
                android:textSize="36sp"
                android:gravity="center_vertical"
                android:textAlignment="gravity"
                android:id="@+id/incMiles"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="mile(s)"
                android:textSize="30dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="10dp"
                android:backgroundTint="#cfe2f3"
                android:text="-"
                android:textSize="36dp"
                android:gravity="center_vertical"
                android:textAlignment="gravity"
                android:id="@+id/decFreq"/>

            <TextView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="#ffffff"
                android:textSize="30sp"
                android:gravity="center_vertical"
                android:textAlignment="gravity"
                android:id="@+id/freqText"/>

            <Button
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:backgroundTint="#cfe2f3"
                android:text="+"
                android:gravity="center_vertical"
                android:textAlignment="gravity"
                android:textSize="36sp"
                android:id="@+id/incFreq"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="time(s)"
                android:textSize="30dp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:text="every"
            android:textAlignment="center"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <Button
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="10dp"
                android:backgroundTint="#cfe2f3"
                android:text="-"
                android:textSize="36dp"
                android:gravity="center_vertical"
                android:textAlignment="gravity"
                android:id="@+id/decDays"/>

            <TextView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="#ffffff"
                android:textSize="30sp"
                android:gravity="center_vertical"
                android:textAlignment="gravity"
                android:id="@+id/daysText"/>

            <Button
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:backgroundTint="#cfe2f3"
                android:text="+"
                android:textSize="36sp"
                android:gravity="center_vertical"
                android:textAlignment="gravity"
                android:id="@+id/incDays"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="day(s)"
                android:textSize="30dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/gearButton"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="@drawable/gear3"/>

            <Button
                android:id="@+id/waterBottleButton"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="@drawable/waterbottle"
                android:onClick="onClick" />

            <Button
                android:id="@+id/whistleButton"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="@drawable/whistle"
                android:onClick="onClick" />

            <Button
                android:id="@+id/hexKeyButton"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="@drawable/hexkey"
                android:onClick="onClick" />

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>
